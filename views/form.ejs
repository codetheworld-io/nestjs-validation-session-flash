<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Form</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            width: 100%;
            height: 100vh;
            justify-content: center;
            align-items: center;
            font-size: 25px;
        }

        form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 10px;
        }

        span {
            display: inline-block;
            width: 70px;
        }

        input, button {
            padding: 2px;
            height: 25px;
            font-size: 15px;
        }

        .error {
            color: red;
            font-size: 15px;
        }
    </style>
</head>
<body>
<form action='/' method='post'>
    <label>
        <span>Name</span> <input autocomplete='off' type='text' name='name' value='<%= old['name']; %>'>
        <% if (errors['name']) { %>
            <% errors['name'].forEach((error) => { %>
                <div class='error'><%= error; %></div>
            <% }); %>
        <% } %>
    </label>
    <label>
        <span>Age</span> <input type='number' name='age' value='<%= old['age']; %>'>
        <% if (errors['age']) { %>
            <% errors['age'].forEach((error) => { %>
                <div class='error'><%= error; %></div>
            <% }); %>
        <% } %>
    </label>
    <button type='submit'>Submit</button>
</form>
</body>
</html>
